<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<DropShadowEffect x:Key="DarkShadowEffect" BlurRadius="8" ShadowDepth="4" Color="{DynamicResource DarkShadowColor}" Opacity="0.5" />
	<DropShadowEffect x:Key="LightShadowEffect" BlurRadius="8" ShadowDepth="4" Direction="135" Color="{DynamicResource LightShadowColor}" Opacity="0.5" />
	<DropShadowEffect x:Key="InnerDarkShadowEffect" BlurRadius="8" ShadowDepth="4" Direction="135" Color="{DynamicResource DarkShadowColor}" Opacity="0.5" />
	<DropShadowEffect x:Key="InnerLightShadowEffect" BlurRadius="8" ShadowDepth="4" Color="{DynamicResource LightShadowColor}" Opacity="0.5" />
	<!--Color="{DynamicResource DarkShadowColor}"-->
	<!--Color="{DynamicResource LightShadowColor}"-->
</ResourceDictionary>
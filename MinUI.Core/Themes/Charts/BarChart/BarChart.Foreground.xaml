<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:chart="clr-namespace:MinUI.Core.Charts"
					xmlns:converter="clr-namespace:MinUI.Core.Converters"
					xmlns:chartType="clr-namespace:MinUI.Core.Models.Chart">
	<converter:GuideLineToXAxisHeightConverter x:Key="GuideLineToXAxisHeightConverter" />
	<Style TargetType="{x:Type chart:BarChartForeground}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type chart:BarChartForeground}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="50" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid x:Name="PART_ContentGrid" Grid.Column="1">
							<Grid.RowDefinitions>
								<RowDefinition Height="*"/>
								<RowDefinition Height="{TemplateBinding GuideLineHeight,Converter={StaticResource GuideLineToXAxisHeightConverter}}" />
							</Grid.RowDefinitions>
							<!-- Bars -->
							<Grid Grid.Row="0"></Grid>
							<!-- XAxis -->
							<Grid x:Name="PART_XAxisGrid" Grid.Row="1">
								
							</Grid>
						</Grid>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:chart="clr-namespace:MinUI.Core.Charts">
	<Style TargetType="{x:Type chart:XAxis}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type chart:XAxis}">
					<Grid HorizontalAlignment="Center">
						<Grid.RowDefinitions>
							<RowDefinition Height="5"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
						<Rectangle />
						<ContentPresenter Grid.Row="1" Margin="0,5,0,0" Content="{TemplateBinding Value}" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
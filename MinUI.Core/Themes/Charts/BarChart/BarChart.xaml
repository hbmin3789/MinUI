<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:chart="clr-namespace:MinUI.Core.Charts">
	<Style TargetType="{x:Type chart:BarChart}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type chart:BarChart}">
					<Grid Height="{TemplateBinding Height}">
						<chart:BarChartBackground x:Name="PART_Background" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"
												  Title="{TemplateBinding Title}" GuideLineCount="{TemplateBinding GuideLineCount}"/>
						<chart:BarChartForeground x:Name="PART_Foreground" Height="{TemplateBinding Height}"
												  Width="{TemplateBinding Width}" 
												  DatasSource="{TemplateBinding DatasSource}"/>
						<!--<chart:BarChartToolTip Style="{TemplateBinding ToolTipStyle}"/>-->
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
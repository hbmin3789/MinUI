<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:chart="clr-namespace:MinUI.Core.Charts">
    <!-- Bar Chart Y-Axis, Background and title themes -->
	<Style TargetType="{x:Type chart:BarChartBackground}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type chart:BarChartBackground}">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="{TemplateBinding HeaderHeight}"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
						<!-- Header(Title) -->
						<Grid>
							<TextBlock Text="{TemplateBinding Title}"/>
						</Grid>
						<!-- GuideLine, yAxis -->
						<StackPanel x:Name="PART_GuideLineBackground" Grid.Row="1">
							
						</StackPanel>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
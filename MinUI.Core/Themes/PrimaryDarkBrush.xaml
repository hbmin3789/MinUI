<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Common -->
	<SolidColorBrush x:Key="LightShadowBrush" Color="#ffffff" />
	<SolidColorBrush x:Key="DarkShadowBrush" Color="#bebebe" />
	<Color x:Key="LightShadowColor">#ffffff</Color>
	<Color x:Key="DarkShadowColor">#bebebe</Color>
	<SolidColorBrush x:Key="BackgroundBrush" Color="#3b3b3b" />
	<!-- Button Brush -->
	<SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#e0e0e0" />
	<SolidColorBrush x:Key="ButtonBrush" Color="#33EFEEEE" />
	<SolidColorBrush x:Key="ButtonMouseOverBrush" Color="#d8d8d8" />
	<SolidColorBrush x:Key="ButtonMouseDownBrush" Color="#d8d8d8" />
	<!-- Button Hover Brush -->
	<SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#dddddd" />
	<SolidColorBrush x:Key="ButtonHoverLightShadowBrush" Color="#ffffff" />
	<SolidColorBrush x:Key="ButtonHoverDarkShadowBrush" Color="#aaaaaa" />
	<!-- Switch Button Brush -->
	<SolidColorBrush x:Key="SwitchButtonBackgroundBrush" Color="#e0e0e0" />
	<SolidColorBrush x:Key="SwitchButtonForegroundBrush" Color="#efefef" />
	<SolidColorBrush x:Key="SwitchButtonOnBackgroundBrush" Color="#33EFEEEE" />
	<SolidColorBrush x:Key="SwitchButtonOffBackgroundBrush" Color="#33EFEEEE" />
	<!-- ProgressBar -->
	<SolidColorBrush x:Key="ProgressBarInnerBackgroundDarkShadowBrush" Color="#aaaaaa" />
</ResourceDictionary>
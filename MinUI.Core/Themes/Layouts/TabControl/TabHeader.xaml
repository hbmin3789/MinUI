<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:ctrls="clr-namespace:MinUI.Core">
	<Style TargetType="{x:Type ctrls:TabHeader}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrls:TabHeader}">
					<Border Width="{TemplateBinding Width}"
							Height="{TemplateBinding Height}"
							Effect="{DynamicResource LightShadowEffect}"
							CornerRadius="5">
						<Border Effect="{DynamicResource DarkShadowEffect}"
								Background="{DynamicResource BackgroundBrush}"
								CornerRadius="5">

							<!--<ListView Background="Transparent"
									  BorderThickness="0"
									  ItemsSource="{TemplateBinding ItemsSource}"
									  ItemTemplate="{TemplateBinding ItemTemplate}"
									  ItemContainerStyle="{TemplateBinding ItemContainerStyle}" />-->
							<StackPanel>
								<ItemsPresenter />
							</StackPanel>
						</Border>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
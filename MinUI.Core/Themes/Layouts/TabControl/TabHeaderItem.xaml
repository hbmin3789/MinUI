<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:ctrls="clr-namespace:MinUI.Core">
	<Style TargetType="{x:Type ctrls:TabHeaderItem}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrls:TabHeaderItem}">
					<Border Width="{TemplateBinding Width}"
							Height="{TemplateBinding Height}"
							Effect="{DynamicResource LightShadowEffect}"
							CornerRadius="5" Cursor="Hand" Margin="3">
						<Border Effect="{DynamicResource DarkShadowEffect}"
								Background="{DynamicResource BackgroundBrush}"
								CornerRadius="5">
							<Grid HorizontalAlignment="Center">
								<Grid.ColumnDefinitions>
									<ColumnDefinition MaxWidth="30" />
									<ColumnDefinition Width="*" />
								</Grid.ColumnDefinitions>
								<!-- Icons -->
								<ContentPresenter Content="{TemplateBinding Icon}" />
								<ContentPresenter Grid.Column="1"
												  Content="{TemplateBinding Content}" 
												  DataContext="{TemplateBinding DataContext}"/>
							</Grid>
						</Border>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:ctrls="clr-namespace:MinUI.Core"
					xmlns:converter="clr-namespace:MinUI.Core.Converters">
	<converter:ObjectToTypeConverter x:Key="ObjectToTypeConverter"/>
	<Style TargetType="{x:Type ctrls:TabControl}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrls:TabControl}">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="{TemplateBinding HeaderWidth}" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<ctrls:TabHeader Grid.Column="0"
										 ItemsSource="{TemplateBinding HeaderItems}" />
						<ContentPresenter Grid.Column="1"
										  Content="{TemplateBinding Content}" 
										  DataContext="{TemplateBinding SelectedItem}"/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
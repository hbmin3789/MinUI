<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
					xmlns:vm="clr-namespace:MinUI.DownloadTest.ViewModel"
				    xmlns:ctrls="clr-namespace:MinUI.DownloadTest.View.Controls">
	<DataTemplate DataType="{x:Type vm:MainViewModel}">
		<ctrls:MainControl/>
	</DataTemplate>
	<DataTemplate DataType="{x:Type vm:DownloadViewModel}">
		<ctrls:DownloadControl/>
	</DataTemplate>
	<DataTemplate DataType="{x:Type vm:CompleteViewModel}">
		<ctrls:CompleteControl/>
	</DataTemplate>
</ResourceDictionary>
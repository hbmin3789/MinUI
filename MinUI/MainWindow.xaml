<Window x:Class="MinUI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:MinUI"
		mc:Ignorable="d"
		Title="MainWindow"
		Height="450"
		Width="800"
		xmlns:min="clr-namespace:MinUI.Core;assembly=MinUI.Core"
		xmlns:chart="clr-namespace:MinUI.Core.Charts;assembly=MinUI.Core">
	<Grid Background="{DynamicResource BackgroundBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel>
			<min:Button Width="100" Height="30" Cursor="Hand" Click="Button_Click">Switch Theme</min:Button>
			<min:SwitchButton Margin="10" Width="80" Height="30"></min:SwitchButton>
			<min:ProgressBar Width="150" Height="20" Value="50" />
			<min:TextBox Margin="0,10,0,0" Width="150" Height="30" />
			<min:Slider MinValue="0"
						MaxValue="200"
						Margin="0,10,0,0"
						Width="150"
						Height="30"
						Value="30" />
			<min:Card Relief="Engraved" Margin="0,10,0,0" Width="100" Height="30" CornerRadius="5">
				<TextBlock HorizontalAlignment="Center">asdadsa</TextBlock>
			</min:Card>
		</StackPanel>
		<chart:BarChart x:Name="bc" Grid.Row="1"
						Title="Test Chart"
						DatasSource="{Binding BarChartDatas}" />
	</Grid>
</Window>

<Window x:Class="MinUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:min="clr-namespace:MinUI.Core;assembly=MinUI.Core">
	<StackPanel Background="{DynamicResource BackgroundBrush}">
		<min:Button
			Width="100"
			Height="30" Cursor="Hand">asdasdas</min:Button>
		<min:SwitchButton Margin="10" Width="80" Height="30"></min:SwitchButton>
		<min:ProgressBar Width="150" Height="20" Value="100"/>
		<Border Background="LightGray" BorderBrush="DarkGray" BorderThickness="1" ClipToBounds="True"
				Width="100" Height="30">
			<Border Background="Transparent" BorderBrush="Black" BorderThickness="0 2 2 0" Margin="-2" CornerRadius="15">
				<Border.Effect>
					<BlurEffect  Radius="10"/>
				</Border.Effect>
			</Border>
		</Border>
	</StackPanel>
</Window>

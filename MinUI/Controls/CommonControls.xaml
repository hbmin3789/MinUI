<UserControl x:Class="MinUI.Test.Controls.CommonControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MinUI.Test.Controls"
			 xmlns:min="clr-namespace:MinUI.Core;assembly=MinUI.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel>
			<min:Button Width="100"
						Height="30"
						Cursor="Hand">Switch Theme</min:Button>
			<min:SwitchButton Margin="10"
							  Width="80"
							  Height="30"></min:SwitchButton>
			<min:ProgressBar Width="150"
							 Height="20"
							 Value="50" />
			<min:TextBox Margin="0,10,0,0"
						 Width="150"
						 Height="30" />
			<min:Slider MinValue="0"
						MaxValue="200"
						Margin="0,10,0,0"
						Width="150"
						Height="30"
						Value="30" />
			<min:Card Relief="Engraved"
					  Margin="0,10,0,0"
					  Width="100"
					  Height="30"
					  CornerRadius="5">
				<TextBlock HorizontalAlignment="Center">asdadsa</TextBlock>
			</min:Card>
		</StackPanel>
	</Grid>
</UserControl>
